<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <TextView
        android:id="@+id/place"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="30dp"
        android:textColor="#000000"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="70dp"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    
    <ImageView
        android:id="@+id/clock"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginLeft="35dp"
        android:layout_marginBottom="20dp"
        android:layout_below="@id/place"
        android:src="@drawable/clock" />
    
    <TextView
        android:id="@+id/hours"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/clock"
        android:layout_marginLeft="25dp"
        android:layout_marginBottom="25dp"
        android:layout_below="@id/place"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    
    <ImageView
        android:id="@+id/dollar"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginLeft="35dp"
        android:layout_marginBottom="25dp"
        android:layout_below="@id/clock"
        android:src="@drawable/dollarsign" />
        
    
    <TextView
        android:id="@+id/cost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/hours"
        android:layout_toRightOf="@id/dollar"
        android:layout_marginLeft="25dp"
        android:layout_marginBottom="25dp"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    
    <ImageView
        android:id="@+id/book"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginLeft="35dp"
        android:layout_below="@id/dollar"
        android:src="@drawable/book"/>
    
    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cost"
        android:layout_toRightOf="@id/book"
        android:layout_marginLeft="25dp"
        android:layout_marginBottom="50dp"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    
    <Button
        android:id="@+id/takemethere"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_below="@id/description"
        android:gravity="center"
        android:text="@string/takeme"
        android:textSize="30sp"
        android:background="@drawable/lightblue"
        android:onClick="showMap"/>
    

</RelativeLayout>
