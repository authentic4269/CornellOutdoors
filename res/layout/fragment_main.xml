<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.cornelloutdoors.MainActivity$PlaceholderFragment" >

    
        
    <Button 
        android:id="@+id/ranked_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/homebutton1lighter"
        android:layout_marginBottom="10dp"
        />
    
    <Button
        android:id="@+id/map_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ranked_list"
        android:background="@drawable/homebutton2lighter"
        android:onClick="showMap"
        android:layout_marginBottom="10dp"
        />
    
    <Button
        android:id="@+id/change_preferences"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/map_view"
        android:background="@drawable/homebutton3lighter"
        android:layout_marginBottom="10dp"
        />
    
    <Button
        android:id="@+id/history"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/change_preferences"
        android:background="@drawable/homebutton4lighter"
        />
    

</RelativeLayout>
